    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usepay.MainActivity" >
	<Button
	        android:onClick="bind"
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
	    	android:text="绑定支付宝服务"
	    />
	<Button
	        android:onClick="use"
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
	    	android:text="使用支付宝服务"
	    />

</LinearLayout>
